<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haoge.sample.easyandroid">

    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".DemosActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.EasyToastActivity" />
        <activity android:name=".activities.EasyDimensionActivity" />
        <activity android:name=".activities.EasyFormaterActivity" />
        <activity android:name=".activities.EasyLogActivity" />
        <activity android:name=".activities.EasyReflectActivity" />
        <activity android:name=".activities.mvp.MVPDemoActivity" />
        <activity android:name=".activities.EasyResultActivity" />
        <activity android:name=".activities.EasyPermissionsActivity" />
        <activity android:name=".activities.EasyExecutorActivity" />
        <activity android:name=".activities.EasyBundleActivity" />
        <activity android:name=".activities.EasySharedPreferencesActivity" />
        <activity android:name=".activities.EasyPhotoActivity"></activity>
    </application>

</manifest>